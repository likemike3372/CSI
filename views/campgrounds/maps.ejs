<% include ../partials/header %>
    







<div class="container">
    
    <div id="map"></div>
    	<div id="info"></div>


<header class="jumbotron">
<div class="container"><h1>Welcome To YelpCamp</h1>
<p>View our hand picked campgrounds from all over the world</p>
<p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Post New Campground</a> </p>
</div>
</header>

        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        
        <% campgrounds.forEach(function(campground){   	 %>
      
        <div class="col-md-4 col-sm-6">
            <div class="thumbnail"> 
                <img src="<%=campground.image%>">
                
                <div class="caption">
                    <h4><%=campground.name %></h3>
                    </div>  
                    <p><a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a></p>
                </div>
            </div>
             
             
            
            
        
            
        <%  }) %>
        </div>
</div>
<% include ../partials/footer %>

	
	

<script>
  var campgrounds = <%- JSON.stringify(campgrounds) %>;

  function init() {	var marker = [];
	    var infowindow = [];
	    var map;
    var locations = [];
    var info=[];
    
    
    campgrounds.forEach(function (campground) {
      
      locations.push({ latlng:new google.maps.LatLng(campground.lat, campground.lng)})
      info.push({description:campground.name})
   

   });
        var bounds = new google.maps.LatLngBounds();
	    
    
		map = new 		                              
       google.maps.Map(document.getElementById('map'), {
			center: locations[0].latlng,
			zoom: 10
		});
    
    for(let i = 0; i < locations.length; i++) {
        marker.push(new google.maps.Marker({
        position: locations[i].latlng,
        map: map,
       })
       );bounds.extend(locations[i].latlng);
  
      infowindow.push(new google.maps.InfoWindow({
        content: info[i].description
      }));
  
      marker[i].addListener('click', () => {
        infowindow[i].open(map, marker[i]);
      });	
    } map.fitBounds(bounds);
	}
  window.onload = init;
</script>

<script src="https://maps.google.com/maps/api/js?key=AIzaSyDh9gIkIRpa98pDpseDftsHHSb28aXgICo&callback=init"></script>