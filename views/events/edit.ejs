<% include ../partials/header %>

<div class="container">
    
       <h1 style="text-align:center">Edit <%=event.name%></h1>
    
    
    
    <div style="width:30%; margin: 25px auto">
        
        <form action="/events/<%=event._id%>?_method=PUT" method ="POST">
    <div class="form-group">
         <label for="name">Name</label>
         <input class="form-control" type = "text" name="event[name]" value="<%=event.name%>">
         </div>
     <div class="form-group">
          <label for="name">Price</label>
          <input class="form-control" type="number" name="event[price]" value="<%=event.price%>" min="0.01" step="0.01">
          </div>
     <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= event.location %>">
        </div>
    <div class="form-group"> <label for="name">Image</label>
    <input class="form-control" type="text" name="event[image]" value="<%=event.image%>">
    </div>
        <div class="form-group">
             <label for="name">Description</label>
             <input class="form-control" type="text" name="event[description]" value="<%=event.description%>"></div>

    <div class="form-group"> <button class="btn btn-lg btn-primary btn-block">Submit!</button></div>

    
   
    
        </form>
    <a href="/events">Go Back</a>
    </div>
    
    




</div>

<% include ../partials/footer %>